
  <% if product.image? %>
    <p><%= link_to image_tag(product.image.url(:index), :class => "framed"), product, :title => product.image_alt %></p>
  <% end %>
  <%= link_to h(product.name), product %>
  <span class="price_info">
    <%= number_to_pounds product.price %>
    <%= link_to image_tag("buy.gif", :alt => "Buy Now", :title => "Buy Now"), product %>
  </span>
