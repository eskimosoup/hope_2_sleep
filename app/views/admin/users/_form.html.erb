<% form_for([:admin, @user], :html => {:multipart => true}) do |f| %>
  <%= f.error_messages %>
  
  <p>
    <%= f.label :first_names %><br />
    <%= f.text_field :first_names %>
  </p>
  
  <p>
    <%= f.label :surname %><br />
    <%= f.text_field :surname %>
  </p>
  
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  
  <p>
    <%= f.label :phone, "Phone Number" %><br />
    <%= f.text_field :phone %>
  </p>

  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>
  
  <p>
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %>
  </p>
    
  <p><%= f.submit "Submit" %></p>
<% end %>
