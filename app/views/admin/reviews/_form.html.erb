<% form_for [:admin, @review], :html => {:multipart => true} do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :user_id %><br />
    <%= f.collection_select :user_id, User.unrecycled, :id, :email %>
    <%= observe_field "review_user_id", :url => update_name_admin_reviews_path, :with => "user_id" %>
  </p>
  
  <div id="name_field">
    <%= render "admin/reviews/name_field" %>
  </div>

  <p>
    <%= f.label :product_id %><br />
    <%= f.collection_select :product_id, Product.unrecycled, :id, :name %>
  </p>

  <p>
    <%= f.label :review %><br />
    <%= f.text_area :review %>
  </p>
  
  <p>
    <%= f.label :checked %><br />
    <%= f.check_box :checked %>
  </p>

  <p><%= f.submit "Submit" %></p>
<% end %>
